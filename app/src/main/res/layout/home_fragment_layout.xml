                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/backup_foreground">
            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_home_backup_and_restory_manage"
                android:textSize="20dp"
                ></TextView>

        </LinearLayout>

        <LinearLayout
